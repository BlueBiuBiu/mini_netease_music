/* pages/music-play/index.wxss */

/* 背景 */
.bg-image, .bg-cover {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.bg-cover {
  background-color: rgba(0, 0, 0, .5);
  backdrop-filter: blur(40px);
}

/* 导航栏 */

.tab {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 26rpx;
}

.tab .active {
  color: #fff;
}

.tab .divider {
  margin: 0 10rpx;
}

/* 内容 */
.content {
  display: flex;
  flex-direction: column;
  color: #fff;
  padding: 0 50rpx;
  height: 100%;
}

.content .album {
  text-align: center;
  margin-top: 50rpx;
  flex: 4;
}

.album .album-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.content .desc {
  margin: 20rpx 0;
}

.desc .title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.desc .subTitle {
  font-size: 22rpx;
  color: #999;
  line-height: 50rpx;
}

.content .lyric {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  color: #26ce8a;
}

.progress .slider {
  margin: 20rpx 6rpx;
}

.progress .detail {
  display: flex;
  justify-content: space-between;
  font-size: 20rpx;
  color: #999;
}

.operation {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0 30rpx;
}

.operation .btn {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  padding: 0;
}

.operation .btn-mode {
  width: 80rpx;
  height: 80rpx;
}

.operation .btn-pause {
  width: 130rpx;
  height: 130rpx;
}

/* 歌词页 */
.scroll-view {
  height: 100%;
  font-size: 32rpx;
  text-align: center;
}

.scroll-view .item {
  height: 70rpx;
  line-height: 70rpx;
}

.scroll-view .active {
  color: #26ce8a;
  font-size: 36rpx;
}